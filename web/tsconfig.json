{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // "outDir": "./build",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
			"shared-types/*": ["../local_types/*"]
    }
  },
  "include": [
    "src/**/*"  // すべてのサブディレクトリを含める
  ],
  "rootDir": "src",
}
